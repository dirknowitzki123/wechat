<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!--默认情况下， sitemesh 只对 HTTP 响应头中 Content-Type 为 text/html 的类型进行拦截和装饰， 我们可以添加更多的mime 类型 -->
	<mime-type>text/html</mime-type>
	<mime-type>application/vnd.wap.xhtml+xml</mime-type>
	<mime-type>application/xhtml+xml</mime-type>

	<mapping>
		<path>*</path>
		<decorator>/WEB-INF/decorators/default.jsp</decorator>
		<decorator>/WEB-INF/decorators/common.jsp</decorator>
	</mapping>
	<mapping>
		<path>*.html</path>
		<decorator>/WEB-INF/decorators/default.html.jsp</decorator>
		<decorator>/WEB-INF/decorators/common.jsp</decorator>
	</mapping>
	<mapping>
		<path>*.tpl</path>
		<decorator>/WEB-INF/decorators/default.tpl.jsp</decorator>
	</mapping>

	<!-- 排除，不进行装饰的路径 -->
	<mapping path="/assets/*" exclue="true" />
	<mapping path="/login/*" exclue="true"/>
	<mapping path="/frame/login/*" exclue="true"/>
	<mapping path="/druid/*" exclue="true"/>
</sitemesh>